{
  "manifest_version": 3,
  "name": "JS/JSON Formatter",
  "version": "1.0.0",
  "description": "Форматирует JavaScript и JSON код с подсветкой синтаксиса",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "JS/JSON Formatter",
    "default_icon": "js-json-logo.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "js-json-logo.png",
    "32": "js-json-logo.png",
    "48": "js-json-logo.png",
    "128": "js-json-logo.png"
}
}
